{
  "manifest_version": 3,
  "name": "0day-p0k3m0n",
  "version": "1.0",
  "description": "From 0 to Hero",

  "permissions": [
    "cookies",
    "webRequest",
    "declarativeNetRequest",
    "activeTab",
    "storage"
  ],

"host_permissions": [
  "http://*/*",
  "https://*/*",
  "http://localhost/*",
  "http://127.0.0.1/*"
],
  

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
